<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" id="VBox" alignment="CENTER" prefHeight="176.0" prefWidth="200.0"
      stylesheets="@../stylesheets/stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1">

    <Text id="title" text="Masters of Renaissance" textAlignment="CENTER"/>

    <Label id="label" text="Nickname"/>
    <TextField id="text-field" fx:id="nicknameTextField" prefHeight="26.0" prefWidth="155.0"/>

    <Label id="label" text="ServerIP"/>
    <TextField id="text-field" fx:id="serverIPTextField"/>

    <Text id="error" fx:id="errorConnection" text="The server is not reachable!" visible="false"/>

    <Button fx:id="connectionButton" text="Connect"/>

</VBox>
